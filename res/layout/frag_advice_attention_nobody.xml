<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_f3"
    android:orientation="vertical"
   >
   <ScrollView android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:scrollbars="none">
        <LinearLayout android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical">
       <RelativeLayout android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/background_booking_date">
        <ImageView android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:scaleType="centerInside"
            android:src="@drawable/advice_attention_nobody"
            android:layout_centerInParent="true"/>
        </RelativeLayout>
        
    <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="14dp" >

                <TextView
                    android:id="@+id/tv_coach_instructor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="推荐教练"
                    android:textColor="@color/gray_6e"
                    android:layout_centerVertical="true"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_coach_instructor_english"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/tv_coach_instructor"
                    android:layout_marginLeft="10dp"
                    android:text="SKI INSTRUCTOR"
                    android:textColor="@color/gray_a6"
                    android:layout_centerVertical="true"
                    android:textSize="13sp" />
                <TextView android:id="@+id/tv_change_transform"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:textSize="13sp"
                    android:textColor="#9e9e9e"
                    android:text="换一批"/>
            </RelativeLayout>
            <LinearLayout android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">
                <com.frame.member.widget.MyGridView 
                    android:id="@+id/gv_coach_instructor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:numColumns="2"
                    android:verticalSpacing="10dp"
                    android:horizontalSpacing="15dp"
                    android:scrollbars="none"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    />
                <TextView android:id="@+id/tv_attention_coach_all"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:textSize="16sp"
                    android:textColor="#4e4e4e"
                    android:gravity="center"
                    android:background="@drawable/shape_login_button_yellow"
                    android:text="关注全部"
                    android:layout_marginBottom="25dp"/>
            </LinearLayout>
                <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="14dp" >

                <TextView
                    android:id="@+id/tv_friends_instructor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="推荐雪友"
                    android:textColor="@color/gray_6e"
                    android:layout_centerVertical="true"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_friends_instructor_english"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/tv_friends_instructor"
                    android:layout_marginLeft="10dp"
                    android:text="SHOW FRIENDS"
                    android:textColor="@color/gray_a6"
                    android:layout_centerVertical="true"
                    android:textSize="13sp" />
                <TextView android:id="@+id/tv_friends_transform"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:textSize="13sp"
                    android:textColor="#9e9e9e"
                    android:text="换一批"/>
            </RelativeLayout>
            <LinearLayout android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">
                <com.frame.member.widget.MyListView 
                    android:id="@+id/lv_attention_friends"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="none"
                    android:divider="@drawable/list_divider_left"/>
                <TextView android:id="@+id/tv_attention_friends_all"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:textSize="16sp"
                    android:textColor="#4e4e4e"
                    android:gravity="center"
                    android:background="@drawable/shape_login_button_yellow"
                    android:text="关注全部"
                    android:layout_marginBottom="25dp"/>
            </LinearLayout>
   </LinearLayout>
   </ScrollView>
  
    
 

</LinearLayout>
