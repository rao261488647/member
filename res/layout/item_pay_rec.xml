<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/selector_btn_gray"
                    android:paddingLeft="15dp" >

                    <TextView
                        android:id="@+id/tv_charge_item_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="缴费日期"
                        android:layout_centerVertical="true"
                        android:textColor="#323232" />

                    <TextView
                        android:id="@+id/tv_pay_rec_item_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="7dp"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/tv_charge_item_1"
                        android:text="2015/12/10"
                        android:textColor="#929292" />

                    <TextView
                        android:id="@+id/tv_pay_rec_item_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="15dp"
                        android:text="6,000.00"
                        android:textColor="#929292"
                        android:textSize="12sp" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.6dp"
                    android:layout_alignParentBottom="true"
                    android:background="#d5d7dc" />
                </RelativeLayout>

