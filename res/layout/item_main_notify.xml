<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="15dp"
    android:background="@drawable/selector_btn_gray"
    android:paddingTop="13dp" >

    <ImageView
        android:id="@+id/iv_main_page_tip_fake"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_tips" />

    <TextView
        android:id="@+id/tv_main_page_item_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="16dp"
        android:layout_toRightOf="@id/iv_main_page_tip_fake"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="#323232"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_main_page_item_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_main_page_item_title"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="7dp"
        android:layout_toRightOf="@id/iv_main_page_tip_fake"
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="#929292"
        android:textSize="14sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.6dp"
        android:layout_below="@id/tv_main_page_item_content"
        android:layout_marginTop="10dp"
        android:background="#d5d7dc" />

</RelativeLayout>