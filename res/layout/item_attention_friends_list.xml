<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:round="http://schemas.android.com/apk/res/com.frame.member"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">
    <com.frame.member.widget.RoundImageView 
        android:id="@+id/iv_friends_profile"
        android:layout_width="50dp"
        android:layout_height="50dp"
        round:type="circle"
        android:src="@drawable/coach_profile"
        android:layout_centerVertical="true"/>
    <LinearLayout android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toRightOf="@id/iv_friends_profile"
        android:layout_marginLeft="15dp"
        android:layout_centerVertical="true">
        <TextView android:id="@+id/tv_name_friends"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#4e4e4e"
            android:text="烫手的山芋"
            />
        <TextView android:id="@+id/tv_level_friends"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="#4e4e4e"
            android:background="@drawable/shape_member_level_yellow"
            android:text="LV.3"
            android:layout_marginTop="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"/>
        
    </LinearLayout>
    <TextView android:id="@+id/tv_attention_friends_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
            android:textColor="#e7d038"
            android:text="+关注"
            android:background="@drawable/shape_hollow_yellow"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:layout_centerVertical="true"/>
    
    

    

</RelativeLayout>