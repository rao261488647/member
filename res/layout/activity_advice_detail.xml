                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="14dp" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="雪友点评"
                        android:textColor="@color/gray_6e"
                        android:textSize="15sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="SNOW FRIENDS"
                        android:textColor="@color/gray_a6"
                        android:textSize="13sp" />
                </LinearLayout>

                <com.frame.member.widget.MyListView
                    android:id="@+id/lv_member_comments"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:divider="@color/gray_f3"
                    android:dividerHeight="2dp" >
                </com.frame.member.widget.MyListView>
            </LinearLayout>
        </ScrollView>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#cbcbcb" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="bottom"
            android:background="@color/white" >

            <TextView
                android:id="@+id/send_comments"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:background="@drawable/shape_corner_yellow"
                android:paddingBottom="10dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="10dp"
                android:text="发送"
                android:textColor="#474b3a"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/et_input_comments"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:layout_toLeftOf="@id/send_comments"
                android:background="@drawable/shape_corner_gray_comments"
                android:hint="期待你的评论"
                android:paddingLeft="10dp"
                android:textColor="#474b3a"
                android:textColorHint="#c5c5c5"
                android:textSize="13sp" />
        </RelativeLayout>
    </LinearLayout>

    <View
        android:id="@+id/view_black_filter"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.0"
        android:background="@color/black" />

</RelativeLayout>