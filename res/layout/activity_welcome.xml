<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.frame.member.activity.WelcomeActivity"
    tools:ignore="MergeRootFrame" >
    
    <ImageView android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/background_welcome_person"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">
        <TextView android:id="@+id/tv_login_choice"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:text="登录"
            android:gravity="center"
            android:background="@drawable/shape_corner_login_gray"
            android:padding="10dp"
            android:alpha="0.0"/>
        <TextView android:id="@+id/tv_register_choice"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:text="注册"
            android:gravity="center"
            android:layout_marginLeft="20dp"
            android:background="@drawable/shape_corner_register_gray"
            android:padding="10dp"
            android:alpha="0.0"/>
        
    </LinearLayout>
    
</RelativeLayout>

