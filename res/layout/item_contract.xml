<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_main_container"
    android:orientation="vertical" >
    <View
                android:layout_width="match_parent"
                android:layout_height="0.6dp"
                android:background="#d5d7dc" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp" >
	   
        <TextView
            android:id="@+id/tv_item_submit_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#323232"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_item_statement_car_plat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tv_item_submit_date"
            android:layout_marginRight="10px"
            android:text=""
            android:textColor="#929292"
            android:textSize="12sp" />
        
        <TextView
            android:id="@+id/tv_item_statement_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tv_item_statement_car_plat"
            android:text=""
            android:textColor="#929292"
            android:textSize="12sp" />

    </RelativeLayout>
  
</LinearLayout>