<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_f3" >

    <ScrollView
        android:id="@+id/sv_attention_nobody"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:visibility="gone" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@drawable/background_booking_date" >

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:scaleType="centerInside"
                    android:src="@drawable/advice_attention_nobody" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="14dp" >

                <TextView
                    android:id="@+id/tv_coach_instructor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="推荐教练"
                    android:textColor="@color/gray_6e"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_coach_instructor_english"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/tv_coach_instructor"
                    android:text="SKI INSTRUCTOR"
                    android:textColor="@color/gray_a6"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/tv_coach_transform"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp"
                    android:text="换一批"
                    android:textColor="#9e9e9e"
                    android:textSize="13sp" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical" >

                <com.frame.member.widget.MyGridView
                    android:id="@+id/gv_coach_instructor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:horizontalSpacing="15dp"
                    android:numColumns="2"
                    android:paddingBottom="15dp"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:paddingTop="15dp"
                    android:scrollbars="none"
                    android:verticalSpacing="10dp" />

                <TextView
                    android:id="@+id/tv_attention_coach_all"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="25dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/shape_login_button_yellow"
                    android:gravity="center"
                    android:text="关注全部"
                    android:textColor="#4e4e4e"
                    android:textSize="16sp" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="14dp" >

                <TextView
                    android:id="@+id/tv_friends_instructor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="推荐雪友"
                    android:textColor="@color/gray_6e"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_friends_instructor_english"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/tv_friends_instructor"
                    android:text="SHOW FRIENDS"
                    android:textColor="@color/gray_a6"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/tv_friends_transform"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp"
                    android:text="换一批"
                    android:textColor="#9e9e9e"
                    android:textSize="13sp" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical" >

                <com.frame.member.widget.MyListView
                    android:id="@+id/lv_attention_friends"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:divider="@drawable/list_divider_inset_left"
                    android:padding="10dp"
                    android:scrollbars="none" />

                <TextView
                    android:id="@+id/tv_attention_friends_all"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="25dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/shape_login_button_yellow"
                    android:gravity="center"
                    android:text="关注全部"
                    android:textColor="#4e4e4e"
                    android:textSize="16sp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/rl_nothing_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/iv_nothing"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:scaleType="centerInside"
                android:src="@drawable/noting_background" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="还没有最新动态哦"
                android:textColor="#cacaca"
                android:textSize="14sp" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_content_advice_attention"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/rl_content_advice_attention"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@color/white" >

            <TextView
                android:id="@+id/tv_myAttention"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:text="我的关注"
                android:textColor="#9a9a9a"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/iv_attention_more"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:src="@drawable/btn_more_normal" />

            <TextView
                android:id="@+id/tv_attention_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:layout_toLeftOf="@id/iv_attention_more"
                android:text="2"
                android:textColor="#9a9a9a"
                android:textSize="14sp" />

            <LinearLayout
                android:id="@+id/ll_myAttention_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_toLeftOf="@id/tv_attention_num"
                android:layout_toRightOf="@id/tv_myAttention"
                android:orientation="horizontal"
                android:layout_centerVertical="true" >
            </LinearLayout>
        </RelativeLayout>

        <com.frame.member.widget.refreshlistview.PullToRefreshListView
            android:id="@+id/lv_advice_attention"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@drawable/list_divider_transparent"
            android:scrollbars="none" />
    </LinearLayout>

</RelativeLayout>