<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <com.frame.member.widget.RoundImageView 
        android:id="@+id/my_center_headimg"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp"
        android:background="@drawable/layer_corner_head"
        android:src="@drawable/my_head"
        />
    <TextView 
        android:id="@+id/my_center_grade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/my_center_headimg"
        android:layout_alignTop="@id/my_center_headimg"
        android:layout_marginRight="25dp"
        android:layout_marginTop="40dp"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:visibility="invisible"
        android:text="LV.6"
        />
    <TextView 
        android:id="@+id/my_center_point"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/my_center_headimg"
        android:layout_alignTop="@id/my_center_headimg"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="40dp"
        android:textColor="@color/white"
        android:visibility="invisible"
        android:textSize="15sp"
        android:text="1628 积分"
        />
    <!-- <TextView 
        android:id="@+id/my_center_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="20dp"
        android:padding="5dp"
        android:background="#1E90FF"
        android:textColor="@color/white"
        android:text="VIP蓝卡"
        /> -->
    <TextView 
        android:id="@+id/my_center_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/my_center_headimg"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:text="暂未设置名字"
        />
    
</RelativeLayout>

