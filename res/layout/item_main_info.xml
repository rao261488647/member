<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_main_relativelayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
       >
    <RelativeLayout 
        android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
        >
	    <ImageView
	        android:id="@+id/news_img1"
		    android:layout_width="115dp"
		    android:layout_height="73dp"
		    android:layout_marginTop="10dp"
		    android:layout_marginRight="10dp"
		    android:layout_marginLeft="10dp"
		    android:src="@drawable/main_icon_news1"
		    />
	     <TextView 
	         android:id="@+id/news_text1"
		     android:layout_width="wrap_content"
		     android:layout_height="wrap_content"
		     android:layout_toRightOf="@id/news_img1"
		     android:layout_marginTop="10dp"
		     android:layout_marginLeft="10dp"
		     android:layout_marginBottom="6dp"
		     android:text="2016滑雪节开幕"
		     android:textSize="16sp"
		     android:textColor="#404040"
		     android:ellipsize="end"
		     android:maxLines="2"
		     />
		 <TextView 
		     android:id="@+id/news_text2"
		     android:layout_width="wrap_content"
		     android:layout_height="wrap_content"
		     android:layout_toRightOf="@id/news_img1"
		     android:layout_below="@id/news_text1"
		     android:layout_marginLeft="10dp"
		     android:text="滑雪运动是运动员把滑雪板装在靴底上在雪地上进行速度、跳跃和运动"
		     android:textSize="12sp"
		     android:textColor="#8f8f8f"
		     android:ellipsize="end"
		     android:maxLines="2"
		     />
	 </RelativeLayout>
</LinearLayout>
