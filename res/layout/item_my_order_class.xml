<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
   	<RelativeLayout
	    android:layout_width="match_parent"
	    android:layout_height="100dp"
	    android:padding="10dp" 
	    android:background="@color/white"
	    >
	    <TextView 
	        android:id="@+id/my_study_class_text_1"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:background="@color/blue"
	        android:gravity="center_vertical"
	        android:padding="20dp"
	        android:textSize="16sp"
	        android:textColor="@color/white"
	        android:textStyle="bold"
	        android:text="训练营"
	        />
		<TextView 
	        android:id="@+id/my_study_class_text_4"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_toRightOf="@+id/my_study_class_text_1"
	        android:layout_alignTop="@+id/my_study_class_text_1"
	        android:layout_marginLeft="10dp"
	        android:textSize="16sp"
	        android:text="12月26日-12月30日"
	        />
		<TextView 
	        android:id="@+id/my_study_class_text_5"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@+id/my_study_class_text_4"
	        android:layout_alignLeft="@+id/my_study_class_text_4"
	        android:textSize="14sp"
	        android:text="基础滑雪动作速成培训班（双板）"
	        />
	    <TextView 
	        android:id="@+id/my_study_class_text_6"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@+id/my_study_class_text_5"
	        android:layout_alignLeft="@+id/my_study_class_text_5"
	        android:textColor="@color/gray"
	        android:textSize="12sp"
	        android:text="新西兰 奥利奥滑雪场"
	        />
	    <TextView 
	        android:id="@+id/my_study_class_text_7"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignTop="@+id/my_study_class_text_1"
	        android:layout_alignParentRight="true"
	        android:textColor="#FF8C69"
	        android:textSize="12sp"
	        android:text="学费返还"
	        />
	    <RelativeLayout 
	        android:id="@+id/my_study_class_rl_1"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_alignParentRight="true"
		    android:layout_alignParentBottom="true"
		    android:gravity="center"
		    >
		    <TextView 
		        android:id="@+id/my_study_class_text_8"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:textColor="#FFD700"
		        android:background="@drawable/shape_my_button_order_yello_corner"
		        android:gravity="center_vertical|center_horizontal"
		        android:padding="5dp"
		        android:text="未评价"
		        android:textSize="12dp"
		        />
		</RelativeLayout>
	</RelativeLayout>
</LinearLayout>

